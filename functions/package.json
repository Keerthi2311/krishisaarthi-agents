{
  "name": "krishisaarthi-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for KrishiSarathi AI Agricultural Assistant",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "dev": "tsc --watch"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@google-cloud/speech": "^6.0.1",
    "@google-cloud/text-to-speech": "^5.0.1",
    "@google-cloud/vertexai": "^1.4.0",
    "@google-cloud/storage": "^7.7.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "busboy": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/busboy": "^1.5.0",
    "typescript": "^5.0.0"
  },
  "private": true
}
