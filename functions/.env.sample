# Environment Variables for Firebase Functions
# Copy this file to .env and fill in your actual values

# Google Cloud Project Configuration
GOOGLE_CLOUD_PROJECT_ID=krishisaarathi
VERTEX_AI_LOCATION=us-central1

# Firebase Configuration
FIREBASE_PROJECT_ID=krishisaarathi

# API Keys (if needed for external services)
WEATHER_API_KEY=your_weather_api_key_here
MARKET_API_KEY=your_market_api_key_here

# Service Account (if using custom service account)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Feature Flags
ENABLE_DAILY_SUMMARY=true
ENABLE_AUDIO_PROCESSING=true
ENABLE_IMAGE_ANALYSIS=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_DAY=1000

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Storage Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,audio/webm,audio/wav

# Language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,te,ta,kn,ml

# External Services
ENABLE_WEATHER_INTEGRATION=true
ENABLE_MARKET_INTEGRATION=true
